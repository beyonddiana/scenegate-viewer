    follows="top|left|right"
    font="SansSerifHugeBold"
    height="26"
    layout="topleft"
    left_pad="4"
    name="title"
    text_color="White"
    top="2"
    value="Experience Info"
    use_ellipses="true"
    right="-3"/>
  <text
    follows="top|left|right"
    font="SansSerifBig"
    height="20"
    layout="topleft"
    left_pad="4"
