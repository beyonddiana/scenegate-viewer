     layout="topleft"
     left="10"
     name="library_label"
     top_pad="10"
     width="100">
        Library:
    </text>
    <check_box
     follows="top|left"
     height="20"
     label="Active"
     layout="topleft"
     left="20"
     name="active_check"
     tool_tip="Active gestures can be triggered by chatting their trigger phrases or pressing their hot keys.  Gestures usually become inactive when there is a key binding conflict."
