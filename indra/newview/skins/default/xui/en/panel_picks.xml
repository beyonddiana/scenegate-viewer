<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 bevel_style="in"
 follows="left|top|right|bottom"
 height="625"
 label="Picks"
 layout="topleft"
 left="0"
 name="panel_picks"
 top="0"
 width="355">
    <text
     type="string"
     length="1"
     follows="top|left|right"
     font="SansSerifHugeBold"
     height="50"
     layout="topleft"
     left="10"
     name="pick_title"
     text_color="white"
     top="10"
     width="330"
     word_wrap="true">
        [NAME]&apos;s favorite places in Second Life...
    </text>
    <!-- below is a special title shown for the Agent on the "Picks" tab-->
    <text
     type="string"
     length="1"
     follows="top"
     font="SansSerifHugeBold"
     height="55"
     layout="topleft"
     left="10"
     name="pick_title_agent"
     text_color="white"
     top="10"
     visible="false" 
     width="330"
     word_wrap="true">
        Tell everyone about your favorite Second Life places...
    </text>
    <scroll_container
     follows="left|top|right|bottom"
     height="495"
     layout="topleft"
     left="8"
     name="profile_scroll"
     opaque="true"
     color="0.5 0.5 0.5 1.0"
     reserve_scroll_corner="false"
     top_pad="0"
     width="340">
        <panel
         bevel_style="in"
         height="40"
         layout="topleft"
         left="0"
         name="back_panel"
         top="0"
         width="310" />
    </scroll_container>
    <panel
     background_visible="true"
     bevel_style="in"
     bg_alpha_color="black"
     enabled="false"
     follows="left|right|bottom"
     height="25"
     label="bottom_panel"
     layout="topleft"
     left="8"
     name="edit_panel"
     visible="false"
     top_pad="0"
     width="340">
        <button
         enabled="false"
         follows="bottom|left"
         font="SansSerifBigBold"
         height="16"
         image_hover_selected="gear.tga"
         image_selected="gear.tga"
         image_unselected="gear.tga"
         layout="topleft"
         left="5"
         name="gear_menu_btn"
         picture_style="true"
         top="5"
         width="16" />
        <button
         follows="bottom|left"
         font="SansSerifBigBold"
         height="16"
         image_disabled="plus.tga"
         image_disabled_selected="plus.tga"
         image_hover_selected="plus.tga"
         image_selected="plus.tga"
         image_unselected="plus.tga"
         layout="topleft"
         left="35"
         name="new_btn"
         picture_style="true"
         tool_tip="Create New Pick at Current Location"
         top="5"
         width="16" />
        <button
         follows="bottom|right"
         font="SansSerifBigBold"
         height="16"
         image_disabled="minus.tga"
         image_disabled_selected="minus.tga"
         image_hover_selected="minus.tga"
         image_selected="minus.tga"
         image_unselected="minus.tga"
         layout="topleft"
         name="trash_btn"
         picture_style="true"
         right="-10"
         top="5"
         width="16" />
    </panel>
    <panel
     follows="bottom|left"
     height="30"
     layout="topleft"
     left="8"
     name="buttons_cucks"
     bottom="625"
     width="345">
        <button
         follows="bottom|left"
         font="SansSerifSmallBold"
         height="25"
         label="Info"
         layout="topleft"
         left="0"
         name="info_btn"
         enabled="false"
         top="0"
         width="50" />
        <button
         follows="bottom|left"
         font="SansSerifSmallBold"
         height="25"
         label="Teleport"
         layout="topleft"
         left_pad="5"
         name="teleport_btn"
         enabled="false"
         top="0"
         width="70" />
        <button
         follows="bottom|left"
         font="SansSerifSmallBold"
         height="25"
         label="Show on Map"
         layout="topleft"
         left_pad="5"
         name="show_on_map_btn"
         enabled="false"
         top="0"
         width="90" />
        <button
         enabled="false"
         follows="bottom|right"
         font="SansSerifSmallBold"
         height="25"
         label="Verb"
         layout="topleft"
         left="280"
         name="verb_btn"
         top="0"
         width="50" />
    </panel>
</panel>
