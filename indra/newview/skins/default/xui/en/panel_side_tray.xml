    name="sidebarpanel2" 
    mouse_opaque="false" 
    background_opaque="false" 
    background_visible="true" 
    bg_opaque_color="0.5 0.5 0.5 1.0"
    image="icn_voice-groupfocus.tga"
    tab_title="People"
    description="Find your friends, contacts and people nearby."
